		.navbar-collapse
			position absolute
			width 100%
			
			.navbar-nav
				background-color rojo
				margin-top 3px	
				
				.marginBottom-0 
					margin-bottom 0

				.dropdown-submenu
					position relative
					
					& > .dropdown-menu
						top 0
						left 100%
						margin-top -6px
						margin-left -1px
						border-radius 0
					
					& > a
						&:after
							display block
							content " "
							float right
							width 0
							height 0
							border-color transparent
							border-style solid
							border-width 5px 0 5px 5px
							border-left-color #cccccc
							margin-top 5px
							margin-right -10px
					
					&:hover
						& > a
							&:after
								border-left-color #555
					
					&.pull-left
						float none
						
						& > .dropdown-menu
							left -100%
							margin-left 10px
							border-radius 6px 0 6px 6px
				
				li
					text-align center
					
					a
						color white
						font-size 18px
						
						&:hover,
						&:focus
							background-color white
							color rojo
					
					&.active
						& > a
							background-color white
							color rojo

